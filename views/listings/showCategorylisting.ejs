<% layout("./layouts/boilerplate.ejs")%>
<%if(listing.length==0){%>
  <h2 class="listing-link mt-4 text-center"><b>Keep checking for availabililty <i class="fa-regular fa-face-sad-cry"></i></b> </h2>
<%}%>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  
  <%for(list of listing){%>
    <a href="/listings/<%=list._id%>" class="listing-link"
        ><div class="card listing-card">
          <img
            src="<%=list.image.url%>"
            class="card-img-top"
            alt="..."
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%=list.title%><br /></b>&#8377; <%=
              list.price.toLocaleString("en-IN")%> / night
            </p>
          </div>
        </div></a
      >

<%}%>
</div>
